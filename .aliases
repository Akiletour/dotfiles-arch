## Switch between all homebrew PHP versions
phpv() {
  brew unlink php && brew link --overwrite --force php@$1
}

## Directory things
alias l='ls -Alh'
alias w='cd ~/www'

## direct access to all PHP versions
alias php70='/usr/local/opt/php@7.0/bin/php'
alias php72='/usr/local/opt/php@7.2/bin/php'
alias php73='/usr/local/opt/php@7.3/bin/php'
alias php74='/usr/local/opt/php@7.4/bin/php'
alias php56='/usr/local/opt/php@5.6/bin/php'
alias php80='/usr/local/opt/php@8.0/bin/php'

## Symfony
alias sf='symfony'
alias cons='symfony console'

## Yarn
alias ys='yarn start'
alias yw='yarn watch'

## WordPress
alias domain='wp option get siteurl'
alias dev-host='php80 ~/www/INR/dev-host/bin/console'

## Utils
alias k9='kill -9'
alias config='code ~/.ssh/config'
alias gt='gittower .'
alias vhosts='code /usr/local/etc/httpd/extra/httpd-vhosts.conf'
alias hosts='code /etc/hosts'
alias copyssh='pbcopy < ~/.ssh/id_rsa.pub'
